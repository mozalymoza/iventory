<%- include('../partials/__head.ejs') %>


  

  <body>
    <%- include('../partials/__navbar.ejs') %>
    <div class="container">
        <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%- messages.success %>
            </div>
            <% } %>
            <h1 class="text-center mt-4 ">Data Pengeluaran pangan</h1>
                <div class="row">
                    <div class="col">
                        <a href="/pengeluaran/create" class="btn btn-sm btn-success">Tambah</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Tanggal Pengeluaran</th>
                                    <th scope="col">Jumlah Dikeluarkan Pangan</th>
                                    <th scope="col">Nama Produk</th>
                                    <th scope="col">Nama Kategori</th>
                                    <th colspan="2" scope="col">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0; i < data.length; i++){ %>
                                    <tr>
                                        <th scope="row"><%= (i+1) %></th>
                                        <td>
                                            <%= data[i].tanggal_pengeluaran %>
                                        </td>
                                        <td>
                                            <%= data[i].jumlah_dikeluarkan %>
                                        </td>
                                        <td>
                                            <%= data[i].nama_produk %>
                                        </td>
                                        <td>
                                            <%= data[i].nama_kategori %>
                                        </td>
                                        <td>
                                            <a href="/pengeluaran/edit/<%= data[i].id_pengeluaran %>" class="btn btn-sm btn-warning">Edit</a>
                                            <a href="/pengeluaran/delete/<%= data[i].id_pengeluaran %>" class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    <%} %>
                            </tbody>
                        </table>
                    </div>
                </div>
    </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
<%- include('../partials/__foot.ejs') %>