<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Data Pangan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Edit Pengeluaran pangan</h2>
        <form action="/pengeluaran/update/<%= id %>" method="POST">
            <div class="row">
                <div class="mb-3">
                    <label for="nama" class="form-label">Tanggal Pengeluaran</label>
                    <input type="date" class="form-control" name="tanggal_pengeluaran" value="<%= tanggal_pengeluaran %>" required/>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Jumlah Pangan yang Dikeluarkan</label>
                    <input type="text" class="form-control" name="jumlah_dikeluarkan" value="<%= jumlah_dikeluarkan %>" required/>
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Nama Produk</label>
                    <select class="form-select" aria-label="Pilih Nama Produk" name="id_produk" required>
                        <option selected>Data Pengeluaran Harga Produk</option>
                        <% for(var i=0; i < data_produk.length; i++){ %>
                            <option value="<%= data_produk[i].id_produk %>"><%= data_produk[i].nama_produk %></option>
                        <% } %>
                    </select>
                </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Simpan</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>